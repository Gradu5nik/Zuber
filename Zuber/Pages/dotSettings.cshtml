@page
@model Zuber.Pages.dotSettingsModel
@{
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.userDot.Id" />
    <p>Please insert coordinates of the place when youll need to be picked up<br> you can look them up using <a href="https://www.google.dk/maps" target="_blank">Google maps</a></p>
    <div class="form-group">
        <label asp-for="@Model.userDot.Lat" class="control-label"></label>
        <input asp-for="@Model.userDot.Lat" class="form-control" />
        <span asp-validation-for="@Model.userDot.Lat" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.userDot.Long" class="control-label"></label>
        <input asp-for="@Model.userDot.Long" class="form-control" />
        <span asp-validation-for="@Model.userDot.Long" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.userDot.Time" class="control-label"></label>
        <input type="time" asp-for="@Model.userDot.Time" class="form-control" />
        <span asp-validation-for="@Model.userDot.Time" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.userDot.Description" class="control-label"></label>
        <input asp-for="@Model.userDot.Description" class="form-control" />
        <span asp-validation-for="@Model.userDot.Description" class="text-danger"></span>
    </div>
    <div class="custom-control custom-switch">

        <input type="checkbox" class="custom-control-input" id="switch" asp-for="@Model.userDot.Hidden">
        <label class="custom-control-label" for="switch">do you want to hide your dot?</label>
    </div>
    @if (Model.User.IsDriver)
    {
        <h3>Ride properties</h3>
        <div class="form-group">
            <label asp-for="@Model.userRide.PlacesRemaining" class="control-label"></label>
            <input asp-for="@Model.userRide.PlacesRemaining" class="form-control" />
            <span asp-validation-for="@Model.userRide.PlacesRemaining" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.userRide.CarDescription" class="control-label"></label>
            <input asp-for="@Model.userRide.CarDescription" class="form-control" />
            <span asp-validation-for="@Model.userRide.CarDescription" class="text-danger"></span>
        </div>
        
    }
    <div class="form-group">
        <input type="submit" value="Save" asp-page-handler="Save" class="btn btn-primary" />
    </div>
</form>